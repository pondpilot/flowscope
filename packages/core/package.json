{
  "name": "@pondpilot/flowscope-core",
  "version": "0.1.0-beta.7",
  "description": "SQL lineage analysis engine for the browser",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./wasm/*": "./wasm/*"
  },
  "files": [
    "dist",
    "wasm"
  ],
  "scripts": {
    "build": "yarn build:wasm && tsc && yarn copy:wasm",
    "build:wasm": "wasm-pack build ../../crates/flowscope-wasm --target web --out-dir ../../packages/core/wasm && node -e \"require('fs').writeFileSync('../../packages/core/wasm/.gitignore', '# Keep wasm artifacts available for publishing\\n')\"",
    "copy:wasm": "rm -rf dist/wasm && mkdir -p dist/wasm && cp -R wasm/* dist/wasm/",
    "prepublishOnly": "yarn build",
    "test": "vitest run --pool=threads --poolOptions.threads.singleThread=true",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "keywords": [
    "sql",
    "lineage",
    "data",
    "wasm",
    "parser",
    "postgres",
    "snowflake",
    "bigquery"
  ],
  "author": "PondPilot Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pondpilot/flowscope"
  },
  "homepage": "https://github.com/pondpilot/flowscope",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "typescript": "^5.9.0",
    "vitest": "^3.2.0"
  }
}
